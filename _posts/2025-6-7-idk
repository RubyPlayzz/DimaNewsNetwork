<button id="halloween-2025-button">Don't click this button</button>

<script>
    // My bad \\
    const halloweenButton = document.getElementById("halloween-2025-button");
    let buttonClicked = false;

    function getRandomInt(min, max) {
        min = Math.ceil(min);
        max = Math.floor(max);
        return Math.floor(Math.random() * (max - min + 1)) + min;
    }

    halloweenButton.addEventListener("click", () => {
        if (buttonClicked) return;
        buttonClicked = true;

        setTimeout(() => {
            const image = document.createElement("img");

            image.src = "{{site.baseurl}}/assets/site-assets/freddy.png"
            image.classList.add("freddy");
            image.classList.add("pixelated-img");

            document.body.appendChild(image);

            var audio = new Audio('{{site.baseurl}}/assets/site-assets/jumpscare.mp3');
            audio.play();

            setTimeout(() => {
                image.remove(); 
                audio.pause(); 
                halloweenButton.innerText = "I told u not to"
            }, 1400);
        }, getRandomInt(1204, 3220))
    })
</script>
